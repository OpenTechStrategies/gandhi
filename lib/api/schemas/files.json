{
  "id": "file",
  "type":"object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "required": [
    "name",
    "mimetype",
    "encoding",
    "path",
    "extension",
    "size"
  ],
  "additionalProperties": false,
  "properties":{
    "created": {
      "type": "date"
    },
    "user_id": {
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string",
      "default": ""
    },
    "mimetype": {
      "type": "string",
      "default": ""
    },
    "encoding": {
      "type": "string",
      "default": ""
    },
    "path": {
      "type": "string",
      "default": ""
    },
    "extension": {
      "type": "string",
      "default": ""
    },
    "size": {
      "type": "number"
    },
    "updated": {
      "type": "date"
    },
    "lock": {
      "type": "boolean",
      "default": false
    }
  }
}
