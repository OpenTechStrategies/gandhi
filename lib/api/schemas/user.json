{
  "id": "user",
  "type":"object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "required": [
    "email"
  ],
  "additionalProperties": false,
  "properties":{
    "admin": {
      "type": "boolean",
      "default": false
    },
    "created": {
      "type": "date"
    },
    "email": {
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string",
      "default": ""
    },
    "password": {
      "type": "string",
      "minLength": 4
    },
    "recovery_token": {
      "type": ["null","string"],
      "default": null
    },
    "updated": {
      "type": "date"
    }
  }
}
