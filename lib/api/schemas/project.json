{
  "id": "http://www.gandhi.io/schema/project",
  "type":"object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "required": [
    "title",
    "cycle_id"
  ],
  "additionalProperties": false,
  "properties":{
    "id": {
      "type":"string"
    },
    "cycle_id": {
      "type":"string"
    },
    "title": {
      "type": "string"
    },
    "status": {
      "type": "string"
    },
    "events": {
      "type": "object",
      "default": {},
      "additionalProperties": {
        "type": "array",
        "default": [],
        "items": {
          "type": "object",
          "required": [
            "value",
            "date"
          ],
          "additionalProperties": false,
          "properties": {
            "value": {
              "type": "boolean"
            },
            "date": {
            }
          }
        }
      }
    },
    "contents": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": [
          "id"
        ],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "constant": {"$data": "0"}
          },
          "data": {
            "type": "object",
            "additionalProperties": true
          },
          "status": {
            "type": "string",
            "default": "none",
            "enum": [
              "none",
              "draft",
              "complete"
            ]
          }
        }
      }
    },
    "assignments": {
      "type": "object",
      "default": {},
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id"
        ],
        "properties": {
          "id": {
            "type": "string",
            "constant": {"$data": "0"}
          },
          "role": {
            "type": "string"
          },
          "invitation_id": {
            "type": ["string", "null"],
            "default": null
          }
        }
      }
    },
    "invitations": {
      "type": "object",
      "default": {},
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "role"
        ],
        "properties": {
          "id": {
            "type": "string",
            "constant": {"$data": "0"}
          },
          "role": {
            "type": "string"
          },
          "name": {
            "type": "string",
            "default": ""
          },
          "email": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "default": null
          }
        }
      }
    },
    "updated": {
      "type": "date"
    },
    "created": {
      "type": "date"
    }
  }
}
