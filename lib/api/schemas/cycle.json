{
  "id": "cycle",
  "$schema": "http://json-schema.org/draft-04/schema",
  "required": [
    "title"
  ],
  "type":"object",
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string",
      "default": ""
    },
    "open": {
      "type": ["boolean", "date"],
      "default": true
    },
    "close": {
      "type": ["boolean", "date"],
      "default": false
    },
    "events": {
      "type": "object",
      "default": {
        "open": {
          "id": "open",
          "title": "Application Window Opened",
          "messages": [
            "Applications are not yet being accepted.",
            "Applications are being accepted."
          ],
          "conditions": [
            [
              {
                "name": "open",
                "options": {}
              }
            ]
          ],
          "listeners": []
        },
        "close": {
          "id": "close",
          "title": "Application Window Closed",
          "messages": [
            "Applications are still open.",
            "Applications are no longer being accepted."
          ],
          "conditions": [
            [
              {
                "name": "close",
                "options": {}
              }
            ]
          ],
          "listeners": []
        }
      },
      "additionalProperties": {
        "anyOf": [
          {
            "type": "null"
          },
          {
            "type": "object",
            "required": [
              "id",
              "title"
            ],
            "additionalProperties": false,
            "properties": {
              "id": {
                "type": "string",
                "constant": {"$data": "0"}
              },
              "title": {
                "type": "string"
              },
              "messages": {
                "type": "array",
                "default": [
                  "",
                  ""
                ],
                "items": {
                  "type": "string"
                },
                "minItems": 2,
                "maxItems": 2
              },
              "conditions": {
                "type": "array",
                "default": [],
                "items": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "object",
                    "required": ["name"],
                    "additionalProperties": false,
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "options": {
                        "type": "object",
                        "additionalProperties": true,
                        "default": {}
                      }
                    }
                  }
                }
              },
              "listeners": {
                "type": "array",
                "default": [],
                "items": {
                  "type": "object",
                  "required": ["name"],
                  "additionalProperties": false,
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "options": {
                      "type": "object",
                      "additionalProperties": true,
                      "default": {}
                    }
                  }
                }
              }
            }
          }
        ]
      }
    },
    "defaults": {
      "type": "object",
      "default": {
        "flow": "start",
        "role": "applicant",
        "status": "active"
      },
      "properties": {
        "flow": {
          "type": "string",
          "default": "start"
        },
        "role": {
          "type": "string",
          "default": "applicant"
        },
        "status": {
          "type": "string",
          "default": "active"
        }
      }
    },
    "flow": {
      "type": "object",
      "default": {
        "start": {
          "id": "start",
          "title": "Start",
          "description": "Start your application!",
          "visible": {
            "applicant": true
          },
          "lock": {
            "open": [
              "open"
            ],
            "close": [
              "submit",
              "archive",
              "close"
            ]
          },
          "component": {
            "name": "start",
            "options": {
              "next": null,
              "role": "applicant",
              "permissions": {
                "write": [
                  "applicant"
                ]
              }
            }
          },
          "next": []
        }
      },
      "additionalProperties": {
        "anyOf": [
          {
            "type": "object",
            "required": ["id", "title", "component"],
            "additionalProperties": false,
            "properties": {
              "id": {
                "type": "string",
                "constant": {"$data": "0"}
              },
              "title": {
                "type": "string"
              },
              "description": {
                "type": "string",
                "default": ""
              },
              "visible": {
                "$ref": "#/definitions/permission"
              },
              "component": {
                "type": "object",
                "required": ["name"],
                "additionalProperties": false,
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "options": {
                    "type": "object",
                    "additionalProperties": true
                  }
                }
              },
              "next": {
                "type": "array",
                "default": [],
                "items": {
                  "type": "string"
                }
              }
            }
          },
          {
            "type": "null"
          }
        ]
      }
    },
    "roles": {
      "type": "object",
      "default": {
        "applicant": {
          "id": "applicant",
          "title": "Applicant",
          "visible": {
            "applicant": true
          },
          "assignable": {
            "applicant": true
          }
        }
      },
      "additionalProperties": {
        "anyOf": [
          {
            "type": "null"
          },
          {
            "type": "object",
            "required": [
              "id",
              "title",
              "visible",
              "assignable"
            ],
            "additionalProperties": false,
            "properties": {
              "id": {
                "type": "string",
                "constant": {"$data": "0"}
              },
              "title": {
                "type": "string"
              },
              "visible": {
                "$ref": "#/definitions/permission"
              },
              "assignable": {
                "$ref": "#/definitions/permission"
              }
            }
          }
        ]
      }
    },
    "status": {
      "type": "string",
      "default": "draft",
      "enum": [
        "draft",
        "active",
        "archived"
      ]
    },
    "statuses": {
      "type": "object",
      "default": {
        "active": {
          "id": "active",
          "title": "Active"
        },
        "accepted": {
          "id": "accepted",
          "title": "Accepted"
        },
        "rejected": {
          "id": "rejected",
          "title": "Rejected"
        },
        "archived": {
          "id": "archived",
          "title": "Archived"
        }
      },
      "additionalProperties": {
        "anyOf": [
          {
            "type": "null"
          },
          {
            "type": "object",
            "required": ["id", "title"],
            "additionalProperties": true,
            "properties": {
              "id": {
                "type": "string",
                "constant": {"$data": "0"}
              },
              "title": {
                "type": "string"
              }
            }
          }
        ]
      }
    },
    "users": {
      "type": "object",
      "default": {},
      "additionalProperties": {
        "anyOf": [
          {
            "type": "null"
          },
          {
            "type": "object",
            "additionalProperties": true,
            "required": [
              "id",
              "role"
            ],
            "properties": {
              "id": {
                "type": "string",
                "constant": {"$data": "0"}
              },
              "role": {
                "type": "string"
              }
            }
          }
        ]
      }
    },
    "config": {
      "type": "object",
      "additionalProperties": true,
      "default": {}
    },
    "updated": {
      "type": "date"
    },
    "created": {
      "type": "date"
    }
  },
  "definitions": {
    "permission": {
      "type": "object",
      "default": {},
      "additionalProperties": {
        "anyOf": [
          {
            "type": "boolean"
          },
          {
            "type": "object",
            "additionalProperties": false,
            "default": {
              "open": [],
              "close": []
            },
            "properties": {
              "open": {
                "default": true,
                "anyOf": [
                  {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  {
                    "type": "boolean"
                  }
                ]
              },
              "close": {
                "type": "array",
                "default": [],
                "items": {
                  "type": "string"
                }
              }
            }
          }
        ]
      }
    }
  }
}
